@using Mango.Web.Models
@model ProductDTO

<form method="post" class="p-2">
    <input asp-for="ProductId" hidden />

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <!-- Header -->
        <div class="card-header bg-dark text-light d-flex justify-content-between align-items-center p-2">
            <h5 class="m-0">@Model.Name</h5>
           
            <span class="text-warning fw-bold">
                @Model.Price.ToString("C", new System.Globalization.CultureInfo("en-IN"))
            </span>

        </div>

        <!-- Body -->
        <div class="card-body p-2">
            <div class="row g-2">
                <!-- Image Column -->
             <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>

                <!-- Details Column -->
                <div class="col-12 col-md-8">
                    <span class="badge bg-primary">@Model.CategoryName</span>
                    <p class="text-muted small mt-2">@Html.Raw(Model.Description)</p>
                    <input asp-for="Count" class="form-control form-control-sm w-50" placeholder="Qty" />
                    <span asp-validation-for="Count" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer row bg-dark">
                <div class="col-12 col-md-6 pb-1 ">
                    <a asp-action ="Index" class="btn btn-success btn-square form-control btn-lg" style="height:40px;">Back to List</a>
                </div>
                <div class="col-12 col-md-6 ">
                    <button type="submit" class="btn btn-primary form-control btn-lg" style="height:40px;">Add to Cart</button>
                </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial - Copy">
    
}

